<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetLove" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryVariant">@color/roxo</item>
        <item name="colorOnPrimary">@color/branco</item>
        <item name="colorOnSecondary">@color/preto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

</resources>