<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/atma_semibold"
        android:hint="@string/password"
        android:imeActionLabel="@string/login"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="#CC0045"
        android:textColorLink="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"></EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/atma_semibold"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#CC0045"
        android:textColorLink="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <!-- Cabeçalho -->

    <TextView
        android:id="@+id/TxtView_Esqueci_Senha"
        android:layout_width="206dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/atma_semibold"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TxtView_Sem_Cadastro"
        tools:text="@string/esqueci_senha" />

    <TextView
        android:id="@+id/TxtView_Sem_Cadastro"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/atma_semibold"
        android:textColor="#E91E63"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        tools:text="@string/sem_cadastro" />

    <Button
        android:id="@+id/login"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/gradient_background"
        android:enabled="true"
        android:fontFamily="@font/atma_semibold"
        android:text="@string/login"
        android:textColor="#FFF8EC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.051" />

    <!-- Cabeçalho -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TxtView_Login_Titulo"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="125dp"
            android:fontFamily="@font/atma_semibold"
            android:text="Login"
            android:textColor="#FFF7E0"
            android:textSize="55sp"
            tools:text="Login" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/petlove_icon"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="-5dp" />

    </RelativeLayout>


    <!-- Rodapé -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ImgView_SAIR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="94dp"
            android:src="@drawable/patinha_sair" />

        <TextView
            android:id="@+id/TxtView_SAIR"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/ImgView_SAIR"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="154dp"
            android:layout_toEndOf="@+id/ImgView_SAIR"
            android:fontFamily="@font/atma_semibold"
            android:text="SAIR"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/TxtView_Direitos"
            android:layout_width="395dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="182dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-30dp"
            android:contentDescription="PetLove ₢ - Todos os Direitos Reservados"
            android:fontFamily="@font/atma_semibold"
            android:text="PetLove ₢ - Todos os Direitos Reservados"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="18dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>