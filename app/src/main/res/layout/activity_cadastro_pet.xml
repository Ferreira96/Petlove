<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadpet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/header_cad_user"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tx_titulo_cad_pet"
            android:text="CADASTRO PET"
            android:textColor="#FFF7E0"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/tx_titulo_cad_pet"
            android:src="@drawable/petlove_icon_pet" />
    </RelativeLayout>

    <!--BOTÃO [SELECIONAR FOTO]-->
    <Button
        android:id="@+id/bt_add_img_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cad_pet" />

    <!-- TEXTO  -->
    <TextView
        android:id="@+id/tx_nome"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="start|center"
        android:layout_marginStart="5dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"
        android:text="NOME:"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tx_idade"
        android:text="IDADE:"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="start|center"
        android:layout_marginStart="5dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome" />

    <TextView
        android:id="@+id/tx_peso"
        android:text="PESO:"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="start|center"
        android:layout_marginStart="5dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_idade" />

    <!-- LABEL  -->
    <EditText
        android:id="@+id/lb_nome"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"

        android:ems="10"
        android:inputType="text"
        android:text=""

        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/lb_idade"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"

        android:ems="10"
        android:inputType="text"
        android:text=""

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_nome" />

    <EditText
        android:id="@+id/lb_peso"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"

        android:ems="10"
        android:inputType="text"
        android:text=""


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_idade" />

    <!-- CHECK BOX  -->
    <CheckBox
        android:id="@+id/cb_adocao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:text="BUSCA LAR"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_peso" />

    <CheckBox
        android:id="@+id/cb_doacao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        android:text="BUSCA DOAÇÃO"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_adocao" />

    <!-- IMAGEM  -->
    <ImageView
        android:id="@+id/img_cad_pet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dog01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user" />

    <!-- BOTÃO  -->
    <Button
        android:id="@+id/bt_salvar"
        android:layout_width="230dp"

        android:layout_height="60dp"
        android:text="SALVAR"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cb_doacao" />

    <!-- Rodapé -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TxtView_Direitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="PetLove ₢ - Todos os Direitos Reservados"
            android:gravity="center"
            android:text="PetLove ₢ - Todos os Direitos Reservados"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>