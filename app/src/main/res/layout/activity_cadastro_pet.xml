<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadpet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/header_cad_user"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tx_titulo_cad_pet"
            android:text="Cadastro Pet"
            android:textColor="#FFF7E0"
            android:fontFamily="@font/atma_semibold"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="73dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:layout_toStartOf="@+id/tx_titulo_cad_pet"
            android:src="@drawable/petlove_icon_pet" />
    </RelativeLayout>

    <!--BOTÃO [SELECIONAR FOTO]-->

    <!-- TEXTO  -->

    <!-- LABEL  -->

    <!-- CHECK BOX  -->

    <Button
        android:id="@+id/bt_add_img_pet"
        android:layout_width="155dp"
        android:layout_height="61dp"

        android:layout_marginTop="8dp"
        android:fontFamily="@font/atma_semibold"
        android:text="Selecionar foto"
        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cad_pet" />

    <ImageView
        android:id="@+id/img_cad_pet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/dog01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user" />

    <EditText
        android:id="@+id/lb_peso"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"

        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/atma_semibold"
        android:text=""
        android:textColor="@color/roxo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_idade" />

    <TextView
        android:id="@+id/tx_nome"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/atma_semibold"
        android:gravity="start|center"
        android:text="Nome:"
        android:textColor="@color/rosa_escuro"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toStartOf="@+id/lb_nome"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user"
        app:layout_constraintVertical_bias="0.422" />

    <EditText
        android:id="@+id/lb_nome"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"

        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/atma_semibold"
        android:text=""
        android:textColor="@color/roxo"

        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_cad_user"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/tx_idade"
        android:layout_width="100dp"

        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/atma_semibold"
        android:gravity="start|center"
        android:text="Idade:"
        android:textColor="@color/rosa_escuro"

        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/lb_idade"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome" />

    <EditText
        android:id="@+id/lb_idade"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"

        android:layout_marginEnd="28dp"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/atma_semibold"
        android:text=""
        android:textColor="@color/roxo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_nome" />

    <CheckBox
        android:id="@+id/cb_adocao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/atma_semibold"
        android:text="Busca lar?"
        android:textColor="@color/rosa"

        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_peso" />

    <CheckBox
        android:id="@+id/cb_doacao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/atma_semibold"
        android:text="Busca doação?"

        android:textColor="@color/rosa"

        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_adocao" />

    <TextView
        android:id="@+id/tx_peso"
        android:layout_width="100dp"

        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/atma_semibold"
        android:gravity="start|center"
        android:text="Peso:"
        android:textColor="@color/rosa_escuro"

        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/lb_peso"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_idade" />

    <!-- IMAGEM  -->

    <!-- BOTÃO  -->

    <!-- Rodapé -->

    <Button
        android:id="@+id/bt_salvar"
        android:layout_width="230dp"
        android:layout_height="60dp"

        android:layout_marginTop="12dp"
        android:fontFamily="@font/atma_semibold"
        android:text="SALVAR"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_doacao" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TxtView_Direitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="PetLove ₢ - Todos os Direitos Reservados"
            android:gravity="center"
            android:text="PetLove ₢ - Todos os Direitos Reservados"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/atma_semibold"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>