<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity">

    <!-- Cabeçalho -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TxtView_Login_Titulo"
            android:fontFamily="@font/atma_semibold"
            android:text="Pet Love"
            android:textColor="#FFF7E0"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="73dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:layout_toStartOf="@+id/TxtView_Login_Titulo"
            android:src="@drawable/petlove_icon_pet" />
    </RelativeLayout>

    <!-- TEXTO  -->

    <TextView
        android:id="@+id/tx_titulo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_semibold"
        android:text="Login"
        android:textColor="@color/rosa"
        android:textSize="50dp"

        app:layout_constraintBottom_toTopOf="@+id/lb_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.601" />

    <TextView
        android:id="@+id/tx_usuario"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_marginStart="5dp"
        android:fontFamily="@font/atma_semibold"
        android:gravity="start|center"
        android:text="Usuário:"
        android:textColor="@color/rosa_escuro"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lb_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tx_senha"
        android:layout_width="100dp"

        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:gravity="start|center"
        android:fontFamily="@font/atma_semibold"
        android:text="Senha:"
        android:textColor="@color/rosa_escuro"
        android:textSize="20dp"

        app:layout_constraintEnd_toStartOf="@+id/lb_senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_usuario" />

    <!-- LABEL  -->
    <EditText
        android:id="@+id/lb_usuario"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/atma_semibold"
        android:text="teste@gmail.com"
        android:textColor="@color/roxo"

        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/lb_senha"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/atma_semibold"
        android:text="teste123"
        android:textColor="@color/roxo"
        android:layout_marginEnd="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_usuario" />

    <!-- BOTÃO  -->

    <Button
        android:id="@+id/bt_entrar"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:fontFamily="@font/atma_semibold"
        android:text="Logar"

        android:textAlignment="center"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_senha"
        app:layout_constraintVertical_bias="0.171" />

    <!-- Rodapé -->
    <TextView
        android:id="@+id/bt_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_semibold"
        android:text="Cadastro"
        android:textColor="@color/rosa_escuro"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_entrar"
        app:layout_constraintVertical_bias="0.246" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TxtView_Direitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="PetLove ₢ - Todos os Direitos Reservados"
            android:gravity="center"
            android:text="PetLove ₢ - Todos os Direitos Reservados"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/atma_semibold"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>