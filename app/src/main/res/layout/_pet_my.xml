<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/rosa_escuro"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_pet_my"
        android:src="@drawable/dog01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_pet_my_nome"
        android:layout_width="wrap_content"
        android:textColor="#FFF7E0"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nome:"
        android:fontFamily="@font/atma_semibold"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tx_pet_my_idade"
        app:layout_constraintStart_toEndOf="@+id/img_pet_my" />

    <TextView
        android:id="@+id/tx_pet_my_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF7E0"
        android:layout_marginStart="10dp"
        android:text="Idade:"
        android:fontFamily="@font/atma_semibold"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_pet_my"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_pet_my_peso"
        android:text="Peso:"
        android:textColor="#FFF7E0"
        android:fontFamily="@font/atma_semibold"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_pet_my"
        app:layout_constraintTop_toBottomOf="@+id/tx_pet_my_idade" />

    <Button
        android:id="@+id/bt_pet_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/atma_semibold"
        android:text="Ver Perfil"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

</androidx.constraintlayout.widget.ConstraintLayout>