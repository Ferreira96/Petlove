<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cadpet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Cabeçalho -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tx_cabecalho_pet"
            android:text="PET LOVE"
            android:textColor="#FFF7E0"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/tx_cabecalho_pet"
            android:src="@drawable/petlove_icon_pet" />
    </RelativeLayout>

    <!-- TEXTO  -->

    <TextView
        android:id="@+id/tx_nome_dog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="NOME"

        android:textColor="@color/roxo"
        android:textSize="15dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tx_idade_dog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        android:gravity="center"
        android:text="IDADE"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dog" />

    <TextView
        android:id="@+id/tx_peso_dog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        android:gravity="center"
        android:text="PESO"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tx_idade_dog"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dog" />

    <TextView
        android:id="@+id/tx_nome_dono"
        android:text="NOME"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        android:layout_width="200dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dono"
        />

    <TextView
        android:id="@+id/tx_contato_dono"
        android:text="CONTATO"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/roxo"

        android:layout_width="200dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome_dono" />



    <!-- IMAGEM  -->
    <ImageView
        android:id="@+id/imageView_dog"
        android:src="@drawable/dog01"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome_dog" />

    <ImageView
        android:id="@+id/imageView_dono"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar01"

        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_dog" />

    <!-- Rodapé -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TxtView_Direitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="PetLove ₢ - Todos os Direitos Reservados"
            android:gravity="center"
            android:text="PetLove ₢ - Todos os Direitos Reservados"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>